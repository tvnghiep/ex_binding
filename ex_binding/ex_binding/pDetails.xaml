<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Chi tiết (BindingContext)"
             x:Class="ex_binding.pDetails">
    <ContentPage.Content>
        <StackLayout>
            <Image x:Name="img1" Source="{Binding ImagePath}"/>
            <Entry x:Name="txtName" HorizontalTextAlignment="Center"  Text="{Binding Name}" />
            <Entry x:Name="txtTitle" Text="{Binding Title}"/>
            <Entry x:Name="txtPhoneNumber" Text="{Binding PhoneNumber}}" />
            <Entry x:Name="txtAddress" Text="{Binding Address}"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>