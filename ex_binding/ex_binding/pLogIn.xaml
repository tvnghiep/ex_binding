<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Đăng nhập"
             x:Class="ex_binding.pLogIn">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="User Name" x:Name="txtUser" />
            <Entry Placeholder="Password" x:Name="txtPassword" IsPassword="True"  />
            <Button Text="Log in" x:Name="btnName" Clicked="OnClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>